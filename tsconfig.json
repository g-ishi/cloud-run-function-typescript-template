{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // これを追加
    "types": ["node"] // これを追加
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
